#!/usr/bin/env bash

export IDRIS_JVM_HOME=${HOME}/bin/idris-jvm

travis_long docker run \
    -e IDRIS_JVM_HOME=/bin/idris-jvm \
    -v $HOME/bin/idris-packages:/.stack-work/install/x86_64-linux/lts-11.22/8.2.2/share/x86_64-linux-ghc-8.2.2/idris-1.3.0/libs \
    -v $PROJECT_ROOT:$PROJECT_ROOT \
    -v $JAVA_HOME:/bin/jdk \
    -v $IDRIS_JVM_HOME:/bin/idris-jvm \
    -w `pwd` \
    mmhelloworld/idris:1.3.0 idris \
    "$@"

